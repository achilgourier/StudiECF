@model IEnumerable<EFCProject.Models.Game>


@{
    ViewData["Title"] = "ShowSearchForm";
}

<h1>ShowSearchForm</h1>

<h4>SearchGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <div class="form-group">
                <label for="SearchTitle" class="control-label"></label>
                <input name="SearchTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SearchSupport" class="control-label"></label>
                <input name="SearchSupport" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="Title"> @Html.DisplayNameFor(model => model.Title)</a>
               
            </th>
            <th>
               
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Description)">  @Html.DisplayNameFor(model => model.Description)</a>
            </th>
            <th>
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Studio)"> @Html.DisplayNameFor(model => model.Studio)</a>
            </th>
            <th>
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Support)"> @Html.DisplayNameFor(model => model.Support)</a>
            </th>
            <th>
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Size)"> @Html.DisplayNameFor(model => model.Size)</a>
            </th>
            <th>

                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Score)"> @Html.DisplayNameFor(model => model.Score)</a>
            </th>
            <th>
                
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Engine)"> @Html.DisplayNameFor(model => model.Engine)</a>
            </th>
            <th>
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.CreateDate)"> @Html.DisplayNameFor(model => model.CreateDate)</a>
            </th>
            <th>
                
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.EndDate)"> @Html.DisplayNameFor(model => model.EndDate)</a>
            </th>
            <th>
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy="@Html.DisplayNameFor(model => model.Statut)"> @Html.DisplayNameFor(model => model.Statut)</a>
                
            </th>
            <th>
                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="DisplayGamesSorted" asp-route-sortBy=" @Html.DisplayNameFor(model => model.Type)">  @Html.DisplayNameFor(model => model.Type)</a>
               
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Studio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Support)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Engine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
            </tr>
        }
    </tbody>
</table>

