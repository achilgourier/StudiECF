@using Microsoft.AspNetCore.Identity


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EFCProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EFCProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow">
            <div class="container-fluid mx-2 container mx-auto ">

                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" src="~/Asset/Images/LogoFrenchGame.png" width="90" height="90" />
                 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav my-3 py-3 mx-2 bordered-lu">
                        <li class="nav-item">
                            <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="ShowSearchForm">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="Displayfav">Jeux Favoris</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="Index">Page Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="User" asp-action="ListUsers">Liste Users</a>
                            </li>
                        }
                        @if (User.IsInRole("Producer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Games" asp-action="IndexProd">Page Producteur </a>
                            </li>
                        }
                        @if (User.IsInRole("CommManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " style="color : #038C3E" asp-area="" asp-controller="Messages" asp-action="Index">Page CommManager</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="container navbar mt-3">
            2023 - EFCProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
