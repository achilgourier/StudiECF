@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Renvoie du mail de confiramtion";
}
<div class="col-md-10 offset-md-1 contente  mt-3">
    <h1>@ViewData["Title"]</h1>
    <h2>Taper votre mail.</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <label asp-for="Input.Email" style="color:black"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
