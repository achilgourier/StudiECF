@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
    <p>
		@Model.Email
        Normalement un mail arrive sur votre boit mail , si ca n'est pas le cas , voila un lien de backup : <a id="confirm-link" href="@Model.EmailConfirmationUrl">confirmer acc</a>
    </p>
    }
    else
    {
<p>
        verifier vos mail
</p>
    }
}

