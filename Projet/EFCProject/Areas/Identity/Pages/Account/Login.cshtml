@page
@model LoginModel

@{
    ViewData["Title"] = "Connection";
}


<div class="col-md-10 offset-md-1 contente container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
        
            <section>
                <form id="account" method="post">
                    <h2>Connection.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating  mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="peseudo" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating  mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="mot de passe" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox  mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">mot de passe oublié</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inscription</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer le mail de confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
